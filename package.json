{
  "name": "bs-token",
  "version": "1.0.0",
  "description": "A js wrapper around BSToken contract to simplify its consumption",
  "main": "src/index.js",
  "scripts": {
    "test": "mocha"
  },
  "keywords": [
    "ethereum",
    "blockchain",
    "contract",
    "solidity",
    "web3"
  ],
  "author": "Banco Sabadell, S.A (https://github.com/BancoSabadell)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/BancoSabadell/bs-token/issues"
  },
  "homepage": "https://github.com/BancoSabadell/bs-token#readme",
  "repository": {
    "type": "git",
    "url": "git://github.com/BancoSabadell/bs-token.git"
  },
  "dependencies": {
    "solc": "^0.4.6",
    "web3": "^0.16.0",
    "eslint": "^3.12.2",
    "smart-contract-deployer": "^1.0.1",
    "sendgrid": "^4.7.1"
  },
  "devDependencies": {
    "bignumber.js": "^4.0.0",
    "bluebird": "^3.4.6",
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "ethereumjs-testrpc": "^3.0.2",
    "mocha": "^3.1.2"
  },
  "eslintConfig": {
    "env": {
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "script"
    },
    "rules": {
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ],
      "indent": [
        "error",
        4
      ],
      "comma-dangle": [
        "error",
        {
          "functions": "ignore"
        }
      ]
    },
    "extends": "airbnb-base"
  }
}
